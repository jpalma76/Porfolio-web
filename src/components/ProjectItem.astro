---
import GitHubProfile from '@/assets/profiles/GitHubProfile.astro';

interface Props {
    title: string;
    date: string;
    description: string;
    link: string;
    repo: string;
    url: string;
}

const { title, date, description, link, repo, url } = Astro.props;
---

<div class="card w-full md:w-[270px] max-sm:w-[90%] h-[360px] md:h-[340px] flex flex-col items-center justify-start border rounded-md transition-all">
    
    <h3 class="mx-auto h-[70px] flex items-center justify-center text-center text-base text-balance uppercase semibold">{title}</h3>
    
    <a 
        href={link}
        target="_blank"
        class="hover:scale-105 hover:opacity-40"
    >
        <img class="w-[95%] md:w-[254px] h-auto md:h-[135px] border rounded-md !mx-auto" src={url} alt={title}>
    </a>
    <p class="w-[90%] flex h-[90px] justify-center items-center text-xs text-center">{description}</p>
    <a
        class="hover:scale-110 hover:text-yellow-600" 
        href={repo}
        target="_blank"
    >
        <div class="flex justify-center items-center gap-x-3 !my-3">
            <GitHubProfile class="size-6" />
            <span> Ver repositorio</span>
        </div>
    </a>
</div>

<style>
    @media (max-width:600px) {
        .card {
            width:350px;
            height: auto;
            margin: 0 auto;
            transition: .3s;
        }
    }
</style>