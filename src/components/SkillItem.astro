---
interface Props {
    name: string;
    url: string;
}

const { name, url } = Astro.props;
const filename = `icono de ${name}`
---

<li
    class="badge w-[170px] flex items-center justify-center px-auto py-1 border-zinc-400 rounded-full text-sm"
>
    <img src={url} alt={filename} class="w-4 h-auto aspect-auto p-0 object-fit" />
    {name}
</li>

<style>
    .badge {
        display: flex;
        color: #fff;
        background-image: linear-gradient(45deg, silver 30%, #111 80%);
        border: 1px solid #efe060;
        font-size: 14px;
        font-weight: 500;
        gap: 8px;
    }
</style>
