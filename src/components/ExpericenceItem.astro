---
interface Props {
  date: string;
  title: string;
  description: string;
}

const { date, title, description } = Astro.props;
---

<article>
  <time
    class="mb-1 text-base text-[var(--title)] font-normal leading-none"
  >
    {date}
  </time>
  
  <h3 class="text-base font-semibold text-[#d1c980] my-3">
    {title}
  </h3>
  <p class="mb-4 text-base font-normal text-[var(--description)]">
    {description}
  </p>
</article>

