---
interface Props {
  link: string;
}
const { link } = Astro.props;
---

<a
  href={link}
  target="_blank"
  class="flex gap-x-3 text-base font-semibold text-black items-center justify-center border rounded-full px-5 py-1 hover:scale-110"
>
  <slot />
</a>

<style>
  a {
    background-image: linear-gradient(45deg, silver 30%, #111 90%);
  }
</style>
